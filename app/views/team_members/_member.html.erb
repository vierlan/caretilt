<tr id="<%= dom_id(member) %>" class="border-t border-gray-300">
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-base font-medium text-gray-900 sm:pl-3"><%= member.first_name %></td>
  <td class="whitespace-nowrap px-3 py-4 text-base text-gray-500"><%= member.last_name %></td>
  <td class="whitespace-nowrap px-3 py-4 text-base text-gray-500"><%= member.email %></td>
  <td class="whitespace-nowrap px-3 py-4 text-base text-gray-500"><%= member.role %></td>
  <td class="whitespace-nowrap px-3 py-4 text-base text-gray-500"><%= member.status %></td>
  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-base font-medium sm:pr-3">
    <%= link_to verify_member_path(member), data: { turbo_frame: "main-content" }, class: "text-primary hover:text-indigo-900" do %>
      Edit<span class="sr-only">, <%= member.email %></span>
    <% end %>  </td>
</tr>
