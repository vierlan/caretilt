<turbo-frame id="activity-feed">
<div class="activity-feed" id="activity-feed">
<% @bookings.each do |booking| %>
  <ul role="list" class="divide-y divide-slate-300/50">
    <li class="px-4 py-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-x-3">
        <img src="https://images.unsplash.com/photo-1519244703995-f4e0f30006d5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="" class="h-6 w-6 flex-none rounded-full bg-gray-800">
        <h3 class="flex-auto truncate text-lg font-semibold leading-6 text-black">
          <p><strong>Enquiry from:</strong> <%= booking.contact_name %></p>
        </h3>
        <time datetime="<%= booking.created_at.iso8601 %>" class="flex-none text-xs text-gray-600"><%= time_ago_in_words(booking.created_at) %> ago</time>      </div>
      <p class="mt-3 truncate text-lg text-gray-500">
        <p><strong>Booking for:</strong> <%= booking.room.name %></p>
        <span class="text-gray-700"><%= booking.room.care_home.name %></span> (<span class="font-mono text-gray-700"><%= booking.contact_name %></span> <span class="text-gray-700"></span>)</p>
    </li>
  </ul>
<% end %>
</div>
</turbo-frame>
