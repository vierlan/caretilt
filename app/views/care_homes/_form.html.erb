<!-- views/care_homes/_form.html.erb -->
<%= simple_form_for [@company, @care_home] do |f| %>
  <div class="space-y-12">
    <div class="grid grid-cols-1 gap-x-8 gap-y-10 border-b border-gray-900/10 pb-12 md:grid-cols-3">
      <div>
        <h2 class="text-base font-semibold leading-7 text-gray-900">Care Home Profile</h2>
        <p class="mt-1 text-sm leading-6 text-gray-600">This information will be displayed publicly so be careful what you share.</p>
      </div>

      <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 md:col-span-2">
        <!-- Website -->
        <div class="sm:col-span-6">
          <%= f.input :website, label: "Website", placeholder: "https://www.example.com", input_html: { id: "website" } %>
        </div>

        <!-- Main Contact -->
        <div class="sm:col-span-6">
          <%= f.input :main_contact, label: "Name Of Main Contact", input_html: { id: "main_contact" } %>
        </div>

        <!-- Name -->
        <div class="sm:col-span-6">
          <%= f.input :name, label: "Name Of Care Home", input_html: { id: "name" } %>
        </div>

        <!-- Address Line 1 -->
        <div class="sm:col-span-6">
          <%= f.input :address1, label: "Address Line 1", input_html: { id: "address1" } %>
        </div>

        <!-- Address Line 2 -->
        <div class="sm:col-span-6">
          <%= f.input :address2, label: "Address Line 2", input_html: { id: "address2" } %>
        </div>

        <!-- City -->
        <div class="sm:col-span-6">
          <%= f.input :city, label: "City", input_html: { id: "city" } %>
        </div>

        <!-- Postcode -->
        <div class="sm:col-span-6">
          <%= f.input :postcode, label: "Postcode", input_html: { id: "postcode" } %>
        </div>

        <!-- Phone Number -->
        <div class="sm:col-span-6">
          <%= f.input :phone_number, label: "Phone Number", input_html: { id: "phone_number" } %>
        </div>

        <!-- Type of Home -->
        <div class="sm:col-span-6">
          <%= f.input :type_of_home, label: "Type of Home", collection: CareHome::TYPEHOME, include_blank: 'Select a type', input_html: { id: "type_of_home" } %>
        </div>

        <!-- Types of Client Group -->
        <div class="sm:col-span-6">
          <%= f.input :types_of_client_group, label: "Types Of Client Group", collection: CareHome::TYPECLIENT, include_blank: 'Select a type', input_html: { id: "types_of_client_group" } %>
        </div>

        <!-- Short Description -->
        <div class="col-span-6">
          <%= f.input :short_description, label: "About", as: :text, input_html: { id: "short_description", rows: 3 } %>
          <p class="mt-3 text-sm leading-6 text-gray-600">Write a few sentences about the care home.</p>
        </div>

        <!-- Photos -->
        <div class="col-span-6">
          <%= f.input :photos, label: "Photo", as: :file, input_html: { id: "photo" } %>
          <button type="button" class="rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" onclick="document.getElementById('photo').click()">Change</button>
        </div>

        <!-- Photos Container -->
        <div class="mt-4 col-span-6">
          <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3" id="photos-container">
          </ul>
        </div>

        <!-- Submit Button -->
        <div class="mt-6 sm:col-span-6">
          <%= f.button :submit, "Save", class: "btn bg-gradient-to-b from-secondary to-primary hover:shadow-slate-500 hover:shadow-lg w-full" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
