<!-- Turbo Frame containing the Places API and the form -->
<turbo-frame id="new_home">
  <h1>GOOGLE API KEY: <% ENV['GOOGLE_API_KEY'] %> </h1>

  <div class="slider-carousel bg-white" data-controller="swiper">
    <h1 class='text-black font-bold text-4xl'>Search places near you!</h1>

    <div data-controller="placesapi" data-placesapi-types="cafe,restaurant,library" class="flex flex-col justify-center">
      <div class="flex m-3 gap-4">
        <input data-placesapi-target="place" type="text" placeholder="Search for a place" class="">
        <button data-placesapi-target="locationButton" class="p-2 bg-blue-500 text-white rounded">Get Current Location</button>
        <button id="confirm-address" class="hidden p-2 bg-green-500 text-white rounded">Confirm Address</button>
      </div>

      <!-- Selected Address and Confirm Button -->
      <div id="selected-address" class="mt-4">
        <p><strong>Selected Address:</strong> <span id="address-details"></span></p>
      </div>
      <!-- Map Display -->
      <div id="map" style="height: 400px; width: 100%;"></div>
    </div>
  </div>

  <!-- Link to go back -->
  <div>
    <%= link_to "&larr; Back to homes".html_safe, company_care_homes_path(@company), class: "btn mb-4 font-bold text-lg bg-gradient-to-b from-secondary to-primary hover:shadow-slate-500 hover:shadow-lg" %>
  </div>

  <!-- The Address Form -->
  <%= form_with(model: [@company, @care_home], local: true) do |f| %>
    <div class="space-y-12">
      <div class="grid grid-cols-1 gap-x-8 gap-y-10 border-b border-gray-900/10 pb-12 md:grid-cols-3">
        <div>
          <h2 class="text-base font-semibold leading-7 text-gray-900">Care home 1 Profile</h2>
          <p class="mt-1 text-sm leading-6 text-gray-600">This information will be displayed publicly so be careful what you share.</p>
        </div>

        <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 md:col-span-2">
          <div class="sm:col-span-6">
            <label for="website" class="block text-sm font-medium leading-6 text-gray-900">Website</label>
            <div class="mt-2">
              <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
                <%# <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm">http://</span> %>
                <%= f.text_field :website, id: "website", class: "block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6", placeholder: "https://www.example.com" %>
              </div>
            </div>
          </div>

          <div class="sm:col-span-6">
            <label for="main_contact" class="block text-sm font-medium leading-6 text-gray-900">Name Of Main Contact</label>
            <div class="mt-2">
              <%= f.text_field :name, id: "main_contact", value: @care_home.main_contact, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="sm:col-span-6">
            <label for="name" class="block text-sm font-medium leading-6 text-gray-900">Name Of Care Home</label>
            <div class="mt-2">
              <%= f.text_field :name, id: "name", value: @care_home.name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <!-- Pre-filled Address Fields -->
          <div class="sm:col-span-6">
            <label for="address1" class="block text-sm font-medium leading-6 text-gray-900">Address Line 1</label>
            <div class="mt-2">
              <%= f.text_field :address1, id: "address1", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="sm:col-span-6">
            <label for="address2" class="block text-sm font-medium leading-6 text-gray-900">Address Line 2</label>
            <div class="mt-2">
              <%= f.text_field :address2, id: "address2", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="sm:col-span-6">
            <label for="city" class="block text-sm font-medium leading-6 text-gray-900">City</label>
            <div class="mt-2">
              <%= f.text_field :city, id: "city", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="sm:col-span-6">
            <label for="postcode" class="block text-sm font-medium leading-6 text-gray-900">Postcode</label>
            <div class="mt-2">
              <%= f.text_field :postcode, id: "postcode", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="sm:col-span-6">
            <label for="phone_number" class="block text-sm font-medium leading-6 text-gray-900">Phone Number</label>
            <div class="mt-2">
              <%= f.text_field :phone_number, id: "phone_number", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <!-- Rest of the fields remain unchanged for manual user input -->
          <div class="sm:col-span-6">
            <label for="type_of_home" class="block text-sm font-medium leading-6 text-gray-900">Type of Home</label>
            <div class="mt-2">
              <%= f.select :type_of_home, options_for_select(@home_types, @care_home.type_of_home), { include_blank: 'Select a type' }, { id: "type_of_home", class: "w-full rounded-md border-0 bg-white py-1.5 pl-3 pr-12 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
            </div>
          </div>

          <div class="sm:col-span-6">
            <label for="types_of_client_group" class="block text-sm font-medium leading-6 text-gray-900">Types Of Client Group</label>
            <div class="mt-2">
              <%= f.select :types_of_client_group, options_for_select(@client_groups, @care_home.types_of_client_group), { include_blank: 'Select a type' }, { id: "types_of_client_group", class: "w-full rounded-md border-0 bg-white py-1.5 pl-3 pr-12 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
            </div>
          </div>

          <div class="col-span-6">
            <label for="short_description" class="block text-sm font-medium leading-6 text-gray-900">About</label>
            <div class="mt-2">
              <%= f.text_area :short_description, id: "short_description", rows: 3, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
            <p class="mt-3 text-sm leading-6 text-gray-600">Write a few sentences about the care home.</p>
          </div>
          
          <div class="col-span-6">
            <label for="photos" class="block text-sm font-medium leading-6 text-gray-900">Photo</label>
            <div class="mt-2 flex items-center gap-x-3">
              <svg class="h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd" />
              </svg>
              <%= f.file_field :photos, id: "photo", class: "hidden" %>
              <button type="button" class="rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" onclick="document.getElementById('photo').click()">Change</button>
            </div>
          </div>
          
           <!-- Photos Container -->
          <div class="mt-4 col-span-6">
            <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3" id="photos-container">
            </ul>
          </div>
          

          <!-- Other fields as required by the form -->
          <div class="mt-6 sm:col-span-6">
            <%= f.submit "Save", class: "btn bg-gradient-to-b from-secondary to-primary hover:shadow-slate-500 hover:shadow-lg w-full" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</turbo-frame>
