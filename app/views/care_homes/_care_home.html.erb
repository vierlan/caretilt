<div id="<%= dom_id(home[:care_home]) %>" class="care-home">
  <div class="overflow-hidden rounded-lg bg-white shadow-lg grid grid-cols-2 grid-flow-col gap-4 mt-5">
    <div class="px-4 py-5 sm:px-6 col-span-2 flex justify-between">
      <div class="ml-4 mt-4">
        <h3 class="text-2xl text-blue-600 font-semibold leading-6 text-gray-900"><%= home[:care_home].name %></h3>
        <p class="mt-1 text-base text-gray-500"><%= home[:care_home].short_address %></p>
      </div>
      <%= image_tag "advina.svg", size: "100x100" %>
    </div>

    <div class="bg-gray-50 px-4 py-5 sm:p-6 row-span-2 col-span-2 flex justify-between gap-4 grow">
      <%= image_tag "Cloisters.CareHome.External.jpg", size: "200x200" %>

      <div class="provider-info">
        <div>
          <h3 class="font-medium">Location Type: <span class="text-grey font-normal"><%= home[:care_home].type_of_home %></span></h3>
        </div>
        <div class="description mt-2 h-32 overflow-hidden">
          <p><%= home[:care_home].short_description %></p>
        </div>
      </div>
    </div>

    <div class="px-4 py-5 sm:px-6 row-span-3 flex flex-col justify-between">
      <%# <div class="flex">
        <span class="inline-flex items-center rounded-md bg-green-100 px-2 py-1 text-base font-medium text-green-700">Rating: Good</span>
        <h1 class="text-blue-600 font-semibold p-1 ms-2">73 Reviews</h1>
      </div> %>

      <!-- Vacant rooms logic -->
      <% if home[:vacant_rooms].length > 0 %>
        <h3 class="font-semibold">
          <%= home[:vacant_rooms].length %> <%= home[:vacant_rooms].length > 1 ? "rooms" : "room" %> available starting at <%= number_to_currency(home[:lowest_price], unit: "Â£") %>
        </h3>
      <% else %>
        <h3 class="font-semibold">No vacant rooms currently available</h3>
      <% end %>

      <div>
        <h2>Services provided:</h2>
        <ul class="list-disc list-inside mt-2">
          <% home[:care_home].types_of_client_group.each do |service| %>
            <li><%= service %></li>
          <% end %>
        </ul>
      </div>

      <div class="flex gap-2 justify-end">
        <% if policy(home[:care_home]).edit? %> 
          <%= link_to 'Edit', edit_care_home_path(home[:care_home]), data: { turbo_frame: "main-content" }, class: "button-base-gradient" %>
        <% end %>
        <%= link_to 'More Details', care_home_path(home[:care_home]), data: { turbo_frame: "main-content" }, class: "btn rounded-xl bg-gradient-to-b from-secondary to-primary text-white" %>
      </div>
    </div>
  </div>
</div>

