<turbo-frame id="main-content">
  <div>
    <h1 class="font-bold text-4xl">CareHomes#show</h1>
    <p>Find me in app/views/care_homes/show.html.erb</p>
  </div>
  <div>
    <%= link_to new_care_home_room_path(@care_home), data: { turbo_frame: "main-content" } do %>
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
        Add a room
      </button>
    <% end %>
  </div>
</turbo-frame>
<div class="relative border-b border-gray-200 pb-5 sm:pb-0">
  <div class="md:flex md:items-center md:justify-between">
    <div class="mt-4">
        <h3 class="text-5xl text-blue-600 font-semibold leading-6">Kirkley Manor</h3>
        <p class="mt-4 text-base text-gray-500">3 Kirkey Park, Lowestoft, NR33 0LQ</p>
    </div>
    <div class="px-4 py-5 sm:px-6 col-span-2 flex justify-between">
        <%= image_tag "advina", size: "150x150" %>
    </div>
  </div>
  <div class="mt-3 flex justify-end gap-4">
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full"> View Website </button>
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full"> Send Email </button>
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full"> View Phone Number </button>
  </div>
  <div class="mt-4">
    <!-- Dropdown menu on small screens -->
    <div class="sm:hidden">
      <label for="current-tab" class="sr-only">Select a tab</label>
      <select id="current-tab" name="current-tab" class="block w-full rounded-md border-0 py-1.5 pl-3 pr-10 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600">
        <option>Applied</option>
        <option>Phone Screening</option>
        <option selected>Interview</option>
        <option>Offer</option>
        <option>Hired</option>
      </select>
    </div>
    <!-- Tabs at small breakpoint and up -->
    <div class="hidden sm:block">
      <nav class="-mb-px flex space-x-8">
        <!-- Current: "border-indigo-500 text-indigo-600", Default: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700" -->
        <a href="#" class="whitespace-nowrap border-b-2 border-transparent px-1 pb-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">Summary</a>
        <a href="#" class="whitespace-nowrap border-b-2 border-transparent px-1 pb-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">Photos</a>
        <a href="#" class="whitespace-nowrap border-b-2 border-indigo-500 px-1 pb-4 text-sm font-medium text-indigo-600" aria-current="page">Available Rooms</a>
        <a href="#" class="whitespace-nowrap border-b-2 border-transparent px-1 pb-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">Team</a>
        <a href="#" class="whitespace-nowrap border-b-2 border-transparent px-1 pb-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">Location</a>
      </nav>
    </div>

  </div>
</div>

<!-- Carousel -->
<div class="carousel-container relative w-full mx-auto mt-8">
  <!-- Carousel Wrapper -->
  <div class="carousel-inner flex overflow-x-auto snap-x snap-mandatory scrollbar-hide">
    <!-- 10 Random Images from Unsplash -->
    <% 10.times do |i| %>
      <div class="carousel-item flex-none w-1/3 snap-start p-2">
        <%= image_tag "Cloisters.CareHome.External", alt: "Slide #{i + 1}", class: "w-full h-auto rounded-lg" %>
      </div>
    <% end %>
  </div>

  <!-- Previous Button -->
  <button id="prevBtn" class="absolute top-1/2 left-2 transform -translate-y-1/2 bg-gray-700 text-white p-2 rounded-full hover:bg-gray-900 focus:outline-none">
    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
    </svg>
  </button>

  <!-- Next Button -->
  <button id="nextBtn" class="absolute top-1/2 right-2 transform -translate-y-1/2 bg-gray-700 text-white p-2 rounded-full hover:bg-gray-900 focus:outline-none">
    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
    </svg>
  </button>
</div>

<!-- Map Placeholder Section -->
