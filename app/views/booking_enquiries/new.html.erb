 <turbo-frame id="main-content">
  <%= form_with(model: [@room, @booking], local: true) do |f| %>
    <% if @booking.errors.any? %>
      <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
        <h2><%= pluralize(@booking.errors.count, "error") %> prevented this post from being saved:</h2>
        <ul>
          <% booking.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="flex flex-col space-y-6">
      <div class="bg-white border shadow pt-4 lg:rounded-lg">
        <div class="px-4">
          <div class="mt-5 md:mt-0 md:col-span-2">
            <div class="space-y-6">
              <div class="sm:col-span-3">
                <%= f.label :contact_name, class: "block text-sm font-medium text-gray-700" %>
                <%= f.text_field :contact_name, required: true, class: "mt-1 focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "Booby Smith", maxlength: 75 %>
              </div>
              <div class="sm:col-span-3">
                <%= f.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
                <%= f.text_field :phone_number, required: true, class: "mt-1 focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "Enter a contact phone number", maxlength: 75 %>
              </div>
              <div class="sm:col-span-3">
                <%= f.label :service_user_name, class: "block text-sm font-medium text-gray-700" %>
                <%= f.text_field :service_user_name, required: true, class: "mt-1 focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "Full Name of service User", maxlength: 75 %>
              </div>
              <div class="sm:col-span-3">
                <%= f.label :message, class: "block text-sm font-medium text-gray-700" %>
                <%= f.text_area :message, required: true, rows: 3 , class: "mt-1 focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", placeholder: "Message to Care Provider", maxlength: 300 %>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-6 sm:col-span-3">
          <%= f.submit "Send", class: "btn bg-gradient-to-b from-secondary to-primary hover:shadow-slate-500 hover:shadow-lg w-full" %>
        </div>
      </div>
    </div>
  <% end %>
</turbo-frame>
