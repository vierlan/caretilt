<!-- app/views/calculator/_calculator_layout.html.erb -->
<div class="calculator-base bg-gray-100 p-8 rounded-lg shadow-lg w-full max-w-md mx-auto">
  <h1 class="text-2xl font-bold text-center mb-6"><%= @step_title %></h1>
  
  <!-- Page Indicator -->
  <div class="text-center mb-4 text-gray-700">
    Page <%= wizard_steps.index(step) + 1 %> of <%= wizard_steps.size %>
  </div>

  <%= yield %> <!-- This will render the step content here -->
</div>

<style>
  .calculator-base {
    width: 100%;
    max-width: 600px;
  }
</style>
