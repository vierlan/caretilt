<%= simple_form_for :contact, url: contact_path, method: :post, html: { class: 'px-6 pb-24 pt-20 sm:pb-32 lg:px-8 lg:py-48' } do |f| %>
  <div class="mx-auto max-w-xl lg:mr-0 lg:max-w-lg">
    <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
      <div>
        <%= f.input :first_name, input_html: { class: 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' } %>
      </div>
      <div>
        <%= f.input :last_name, input_html: { class: 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' } %>
      </div>
      <div class="sm:col-span-2">
        <%= f.input :email, input_html: { class: 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' } %>
      </div>
      <div class="sm:col-span-2">
        <%= f.input :phone_number, input_html: { class: 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' } %>
      </div>
      <div class="sm:col-span-2">
        <%= f.input :message, as: :text, input_html: { rows: 4, class: 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' } %>
      </div>
    </div>
    <div class="mt-8 flex justify-end">
      <%= f.button :submit, 'Send message', class: 'button-base-primary' %>
    </div>
  </div>
<% end %>
