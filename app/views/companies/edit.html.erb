<turbo-frame id="main-content">
  <%= simple_form_for @company, url: company_path(@company), method: :patch, html: { local: true } do |form| %>
    <div class="space-y-12">
      <div class="grid grid-cols-1 gap-x-8 gap-y-10 border-b border-gray-900/10 pb-12 md:grid-cols-3">
       
        <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 md:col-span-2">
          <div class="md:col-span-6">
            <h2 class="text-base font-semibold leading-7 text-gray-900">Company Profile</h2>
            <p class="mt-1 text-sm xl:text-base leading-6 text-gray-600">This information will be displayed publicly so be careful what you share.</p>
          </div>

          <!-- Website -->
          <div class="sm:col-span-6">
            <%= form.input :website, label: "Website", placeholder: "www.example.com", required: true, input_html: { class: "block w-full py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-indigo-600" } %>
          </div>

          <!-- Logo Upload -->
          <div class="sm:col-span-6">
            <%= form.input :logo, as: :file, label: "Logo", input_html: { class: "hidden" } %>
            <button type="button" class="rounded-md bg-white px-2.5 py-1.5 text-sm xl:text-base font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" onclick="document.getElementById('company_logo').click()">Change</button>
          </div>
          <!-- Logo Preview -->
          <div class="mt-4 sm:col-span-6">
            <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3" id="logo-container">
              <% if @company.logo.attached? %>
                <li>
                  <img src="<%= url_for(@company.logo) %>" class="h-12 w-12 object-cover">
                </li>
              <% end %>
            </ul>
          </div>

          <!-- Address Fields -->
          <div class="sm:col-span-6">
            <%= form.input :address1, label: "Address", required: true, input_html: { class: "block w-full py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-indigo-600" } %>
          </div>
          <div class="sm:col-span-6">
            <%= form.input :address2, label: "Address Line 2", required: true, input_html: { class: "block w-full py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-indigo-600" } %>
          </div>
          <div class="sm:col-span-6">
            <%= form.input :city, label: "City", required: true, input_html: { class: "block w-full py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-indigo-600" } %>
          </div>
          <div class="sm:col-span-6">
            <%= form.input :postcode, label: "Postcode", required: true, input_html: { class: "block w-full py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-indigo-600" } %>
          </div>
          <div class="sm:col-span-6">
            <%= form.input :phone_number, label: "Phone Number", required: true, input_html: { class: "block w-full py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-indigo-600" } %>
          </div>
          <div class="sm:col-span-6">
            <%= form.input :companies_house_id, label: "Companies House ID", required: true, input_html: { class: "block w-full py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-indigo-600" } %>
          </div>

          <!-- Save Changes Button -->
          <div class="mt-6 sm:col-span-6">
            <%= form.button :submit, "Save Changes", class: "btn bg-gradient-to-b from-secondary to-primary hover:shadow-slate-500 hover:shadow-lg w-full" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</turbo-frame>
