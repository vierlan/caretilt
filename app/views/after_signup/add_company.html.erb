<div class="min-h-screen flex justify-center py-12 px-8 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <%= render 'devise/shared/devise_heading', title: 'Sign up' %>
    <%= render "devise/shared/devise_sub_heading", subtitle: "Let's get to know you." %>
    <p>Please enter corrent details for invoicing.</p>
    <%= form_for @company, url:wizard_path, method: :put do |f| %>
    <div class="mb-2">
      <%= f.text_field :name, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "Company name", required: true %>
    </div>
    <div class="mb-2">
      <%= f.text_field :address1, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "Address line 1", required: true %>
    </div>
    <div class="mb-2">
      <%= f.text_field :address2, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "Address line 2", required: true %>
    </div>
    <div class="mb-2">
      <%= f.text_field :city, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "City", required: true %>
    </div>
    <div class="mb-2">
      <%= f.text_field :postcode, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "Postcode", required: true %>
    </div>
    <div class="mb-2">
      <%= f.text_field :contact_name, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "Contact name", required: true %>
    </div>
    <div class="mb-2">
      <%= f.email_field :email, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "Email address", required: true %>
    </div>
    <div class="mb-2">
      <%= f.text_field :phone_number, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "Phone number", required: true %>
    </div>
    <div class="mb-2">
      <%= f.text_field :companies_house_id, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "Companies House ID no.", required: true %>
    </div>
    <div class="mt-6">
      <%= f.submit "Next", class: "group relative w-full flex justify-center py-2.5 px-4 border border-slate-600 text-xl leading-5 font-medium rounded-md text-black bg-slate-200 hover:bg-primary focus:outline-none bg-gradient-to-r from-secondary to-primary hover:bg-gradient-to-r from-primary to-secondary" %>
    </div>
    <% end %>
  </div>
</div>
