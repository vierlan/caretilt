<div class="min-h-screen flex justify-center py-12 px-8 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <%= render 'devise/shared/devise_heading', title: 'Sign up' %>
    <%= render "devise/shared/devise_sub_heading", subtitle: "Let's get to know you." %>
    <%= form_for @user, url:wizard_path, method: :put do |f| %>
      <div class="mb-2">
        <%= f.text_field :first_name, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "First name", required: true %>
      </div>
      <div class="mb-2">
        <%= f.text_field :last_name, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "Last name", required: true %>
      </div>
      <div class="mt-6">
        <%= f.submit "Next", class: "group relative w-full flex justify-center py-2.5 px-4 border border-slate-600 text-xl leading-5 font-medium rounded-md text-black bg-slate-200 hover:bg-primary focus:outline-none bg-gradient-to-b from-secondary to-primary  hover:shadow-slate-500 hover:shadow-lg" %>
      </div>
    <% end %>
  </div>
</div>
