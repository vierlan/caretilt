<div class="min-h-screen flex justify-center py-12 px-8 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <%= render 'devise/shared/devise_heading', title: 'Sign up' %>
    <%= render "devise/shared/devise_sub_heading", subtitle: "Let's get to know you." %>
    <p>Please enter corrent details for invoicing.</p>
    <%= form_for @local_authority, url:wizard_path, method: :put do |f| %>
    <div class="mb-2">
      <%= f.text_field :name, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "Company name", required: true %>
    </div>
    <% end %>
  </div>
</div>
