<!-- app/views/users/two_factor_authentication/show.html.erb -->
<h2>Verify Your Phone Number</h2>

<%= button_to "Send Verification Code", send_verification_user_path, method: :post, class: "btn btn-primary" %>

<!-- The form for verifying the code will be shown after sending the OTP -->
<%= form_with url: user_verify_post_path, method: :post do |form| %>
  <div class="form-group">
    <%= form.label :verification_code, "Enter the verification code sent to your phone" %>
    <%= form.text_field :verification_code, class: "form-control" %>
  </div>

  <%= form.submit "Verify", class: "btn btn-primary" %>
<% end %>
