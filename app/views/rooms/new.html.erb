<turbo-frame id="main-content">
  <div>
    <%= link_to sanitize("&larr; Back to homes"), care_home_path(@care_home), class: "btn mb-4 font-bold text-lg text-white bg-gradient-to-b from-secondary to-primary  hover:shadow-slate-500 hover:shadow-lg" %>
  </div>
  <%= simple_form_for [@care_home, @room], html: { class: 'form-horizontal' } do |f| %>
    <div class="space-y-12">
      <div class="grid grid-cols-1 gap-x-8 gap-y-10 border-b border-gray-900/10 pb-12 md:grid-cols-3">
        <div>
          <h2 class="text-base font-semibold leading-7 text-gray-900">Care home 1 Profile</h2>
          <p class="mt-1 text-sm leading-6 text-gray-600">This information will be displayed publicly so be careful what you share.</p>
        </div>
        <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 md:col-span-2">
          <div class="sm:col-span-6">
            <%= f.input :name, label: "Room Name", input_html: { class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
          </div>
          <div class="sm:col-span-6">
            <%= f.input :core_fee_level, label: "Core fee level", input_html: { class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
          </div>
          <div class="sm:col-span-6">
            <%= f.input :core_hours_of_care, label: "Core Hours of Care", input_html: { class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
          </div>
          <div class="sm:col-span-6">
            <div class="mt-2 flex items-center">
              <%= f.input :additional_fees_associated, as: :boolean, label: "Additional fees associated?", input_html: { class: "ml-8 h-8 w-8 my-2 focus:ring-primary-500 border-gray-300 rounded rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
            </div>
          </div>
          <div class="sm:col-span-6">
            <div class="mt-2 flex items-center">
              <%= f.input :single_double, as: :select, collection: ["Single Room", "Double Room"], include_blank: 'Select a room', label: "Single/Double Room", input_html: { class: "w-full rounded-md border-0 bg-white py-1.5 pl-3 pr-12 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
            </div>
            <div class="sm:col-span-6 mt-2 flex items-center">
              <%= f.input :ensuite, as: :boolean, label: "Ensuite?", input_html: { class: "ml-8 h-8 w-8 my-2 focus:ring-primary-500 border-gray-300 rounded rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
            </div>
            <div class="ml-8 mt-2">
              <%= f.input :photos, as: :file, label: "Photo", input_html: { multiple: true, class: "hidden" } %>
              <div class="mt-2 flex items-center gap-x-3">
                <svg class="h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd" />
                </svg>
                <button type="button" class="rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" onclick="document.getElementById('room_photos').click()">Change</button>
              </div>
            </div>
          </div>
          <div class="sm:col-span-6 mt-2 flex items-center">
            <%= f.input :vacant, as: :boolean, label: "List this room as Vacant", input_html: { class: "ml-8 h-8 w-8 my-2 focus:ring-primary-500 border-gray-300 rounded rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
          </div>
          <div class="mt-6 sm:col-span-6">
            <%= f.button :submit, "Save", class: "btn bg-gradient-to-b from-secondary to-primary hover:shadow-slate-500 hover:shadow-lg w-full" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</turbo-frame>
