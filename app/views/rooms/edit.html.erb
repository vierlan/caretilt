<turbo-frame id="main-content">
  <div class="mx-auto">
    <%= link_to sanitize("&larr; Back to homes"), care_homes_path, class: "btn mb-4 font-bold text-lg text-white bg-gradient-to-b from-secondary to-primary hover:shadow-slate-500 hover:shadow-lg" %>
  </div>
  <%= form_with(model: [@room], local: true, method: :patch) do |f| %>
    <div class="space-y-12">
      <div class="grid grid-cols-1 gap-x-8 gap-y-10 border-b border-gray-900/10 pb-12 md:grid-cols-3">
        <div>
          <h2 class="text-base font-semibold leading-7 text-gray-900"><%= @room.name.capitalize %> Profile</h2>
          <p class="mt-1 text-sm leading-6 text-gray-600">This information will be displayed publicly so be careful what you share.</p>
        </div>
        <div class="flex items-center" data-controller="toggle" data-toggle-type="vacant">
          <button type="button" class="relative inline-flex h-6 w-11 flex-shrink-0 cursor-pointer rounded-full border-2 border-transparent <%= @room.vacant ? 'bg-secondary' : 'bg-gray-200' %> transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2" role="switch" aria-checked="<%= @room.vacant %>" data-action="click->toggle#toggle" data-toggle-target="button">
            <span aria-hidden="true" class="pointer-events-none inline-block h-5 w-5 <%= @room.vacant ? 'translate-x-5' : 'translate-x-0' %> transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"></span>
          </button>
          <span class="mx-4 text-sm" id="vacant-label" data-toggle-target="label">
            <span class="font-lg text-gray-900 font-bold"><%= @room.vacant ? 'Vacant' : 'Not Vacant' %></span>
          </span>
          <%= f.check_box :vacant, id: "vacant", class: "hidden", data: { toggle_target: "input" } %>
        </div>
        <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 md:col-span-2">
          <div class="sm:col-span-6">
            <label for="name" class="block text-sm font-medium leading-6 text-gray-900">Room Name</label>
            <div class="mt-2">
              <%= f.text_field :name, id: "name", value: @room.name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>
          <div class="sm:col-span-6">
            <label for="core_fee_level" class="block text-sm font-medium leading-6 text-gray-900">Core fee level</label>
            <div class="mt-2">
              <%= f.number_field :core_fee_level, id: "core_fee_level", value: @room.core_fee_level, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>
          <div class="sm:col-span-6">
            <label for="core_hours_of_care" class="block text-sm font-medium leading-6 text-gray-900">Core Hours of Care</label>
            <div class="mt-2">
              <%= f.number_field :core_hours_of_care, id: "core_hours_of_care", value: @room.core_hours_of_care, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>
          <div class="sm:col-span-6">
            <div class="mt-2 flex items-center">
              <%= f.check_box :additional_fees_associated, id: "additional_fees_associated", checked: @room.additional_fees_associated, class: "ml-8 h-8 w-8 my-2 focus:ring-primary-500 border-gray-300 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              <label for="additional_fees_associated" class="ml-8 block text-sm font-medium leading-6 text-gray-900">Additional fees associated?</label>
            </div>
          </div>
          <div class="sm:col-span-6">
            <div class="mt-2 flex items-center">
              <%= f.select :single_double, options_for_select(["Single Room", "Double Room"], @room.single_double), { include_blank: 'Select a room' }, { id: "single_double", class: "w-full rounded-md border-0 bg-white py-1.5 pl-3 pr-12 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
              <label for="single_double" class="ml-8 block text-sm font-medium leading-6 text-gray-900">Single/Double Room</label>
            </div>
            <div class="sm:col-span-6 mt-2 flex items-center">
              <%= f.check_box :ensuite, id: "ensuite", checked: @room.ensuite, class: "ml-8 h-8 w-8 my-2 focus:ring-primary-500 border-gray-300 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              <label for="ensuite" class="ml-8 block text-sm font-medium leading-6 text-gray-900">Ensuite?</label>
            </div>
            <div class="ml-8 mt-2">
              <label for="photos" class="ml-8 block text-sm font-medium leading-6 text-gray-900">Photo</label>
              <div class="mt-2 flex items-center gap-x-3">
                <svg class="h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" clip-rule="evenodd" />
                </svg>
                <%= f.file_field :photos, as: :file, input_html: { name: 'photos[]', multiple: true } %>
                <button type="button" class="rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" onclick="document.getElementById('photo').click()">Change</button>
              </div>
            </div>
          </div>
          <div class="mt-6 sm:col-span-6">
            <%= f.submit "Save", class: "btn bg-gradient-to-b from-secondary to-primary hover:shadow-slate-500 hover:shadow-lg w-full" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</turbo-frame>
