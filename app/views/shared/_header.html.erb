<header class="bg-white drop-shadow-md">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-4 lg:px-8" aria-label="Global" data-controller="navigation togglevisibility" data-navigation-class-value="underline">
    <!-- Logo Section (Visible on both desktop and mobile until menu is open) -->
    <div class="flex lg:flex-1" data-togglevisibility-target="logo">
      <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
        <span class="sr-only">CareTilt</span>
        <%= image_tag 'logo_symbol_trans.png', class: 'w-auto', alt: 'caretilt_logo', style: 'width: 60px' %>
      <% end %>
    </div>
    <!-- Mobile Hamburger Menu Button (Visible only when menu is closed) -->
    <div class="flex lg:hidden" data-togglevisibility-target="iconOpen">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
        data-action="click->togglevisibility#toggle" aria-controls="mobile-menu" aria-expanded="false">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <!-- Desktop Links -->
    <div class="hidden lg:flex flex-start lg:gap-x-12">
      <%= link_to "Home", root_path, class: "header-link", data: { navigation_target: "link", action: "click->navigation#highlightButton" } %>
      <%= link_to "About", about_path, class: "header-link", data: { navigation_target: "link", action: "click->navigation#highlightButton" } %>
      <%= link_to "Free Calculator", pricing_calculator_path(:service_details), class: "header-link", data: { navigation_target: "link", action: "click->navigation#highlightButton" } %>
      <%= link_to "Pricing", pricing_path, class: "header-link", data: { navigation_target: "link", action: "click->navigation#highlightButton" } %>
      <%= link_to "Guides", guides_path, class: "header-link", data: { navigation_target: "link", action: "click->navigation#highlightButton" } %>
      <% if !current_user %>
        <%= link_to "Contact", contact_path, class: "header-link", data: { navigation_target: "link", action: "click->navigation#highlightButton" } %>
        <div class="hidden lg:flex lg:flex-1 lg:justify-end">
          <a href="/login" class="text-lg font-bold leading-6 text-gray-900">Log in <span aria-hidden="true">&rarr;</span></a>
          <a href="/signup" class="text-lg font-bold leading-6 text-gray-900 ml-6">Register <span aria-hidden="true">&rarr;</span></a>
        </div>
      <% else %>
        <%= link_to "Dashboard", dashboard_index_path(current_user), class: "header-link", data: { navigation_target: "link", action: "click->navigation#highlightButton" } %>
<%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "group flex gap-x-3 rounded-md p-2 my-2 text-lg font-semibold leading-6 text-gray-900 hover:bg-gray-50 hover:text-primary" do %>
          <svg class="h-6 w-6 shrink-0 text-gray-700 group-hover:text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
          </svg>
          Sign Out Securely
        <% end %>      <% end %>
    </div>
    <!-- Mobile Menu (Visible when hamburger icon is clicked) -->
    <div id="mobile-menu" class="hidden lg:hidden inset-0 z-50 w-full bg-white sm:max-w-sm" data-togglevisibility-target="content">
      <!-- Close Menu Button (Cross Icon) -->
      <div class="flex items-center justify-between mb-4 w-full">
        <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
          <span class="sr-only">CareTilt</span>
          <%= image_tag 'logo_symbol_trans.png', class: 'w-auto', alt: 'caretilt_logo', style: 'width: 60px' %>
        <% end %>
        <button type="button" class="text-gray-700" data-action="click->togglevisibility#toggle">
          <%= render 'shared/icons/cross' %>
        </button>
      </div>
      <!-- Mobile Links in Vertical List -->
      <div class="mt-6 space-y-2">
        <%= link_to "Home", root_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base 2xl:text-lg font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
        <%= link_to "About", about_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base 2xl:text-lg font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
        <%= link_to "Free Calculator", pricing_calculator_path(:service_details), class: "-mx-3 block rounded-lg px-3 py-2 text-base 2xl:text-lg font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
        <%= link_to "Pricing", pricing_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base 2xl:text-lg font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
        <%= link_to "Guides", guides_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base 2xl:text-lg font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
        <% if !current_user %>
          <%= link_to "Contact", contact_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base 2xl:text-lg font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
          <a href="/login" class="-mx-3 block rounded-lg px-3 py-2.5 text-base 2xl:text-lg font-semibold leading-7 text-gray-900 hover:bg-gray-50">Log in <span aria-hidden="true">&rarr;</span></a>
          <a href="/signup" class="-mx-3 block rounded-lg px-3 py-2.5 text-base 2xl:text-lg font-semibold leading-7 text-gray-900 hover:bg-gray-50">Register <span aria-hidden="true">&rarr;</span></a>
        <% else %>
          <%= link_to "Dashboard", dashboard_index_path(current_user), class: "-mx-3 block rounded-lg px-3 py-2.5 text-base 2xl:text-lg font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base 2xl:text-lg font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
