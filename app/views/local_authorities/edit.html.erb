<turbo-frame id="main-content">

<div class="min-h-screen flex justify-center py-12 px-8 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <%= render 'devise/shared/devise_heading', title: 'Edit' %>
    <%= render "devise/shared/devise_sub_heading", subtitle: "Please enter correct details for invoicing." %>
  <%= form_with(model: @local_authority, local: true) do |f| %>
      <div class="mb-2">
        <%= f.text_field :name, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "Authority/Organisation name", required: true %>
      </div>
      <div class="mb-2">
        <%= f.text_field :email, class: "my-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-500 focus:ring-opacity-50", placeholder: "Email", required: true %>
      </div>
      <div class="mt-6">
        <button type="submit" title="Save" data-turbo="false" class="group relative w-full flex justify-center py-2.5 px-4 border border-transparent text-sm xl:text-base leading-5 font-medium rounded-md text-white bg-gradient-to-b from-secondary to-primary  hover:shadow-slate-500 hover:shadow-lg focus:outline-none bg-gradient-to-b from-secondary to-primary  hover:shadow-slate-500 hover:shadow-lg">Save
      </button>
      </div>
    <% end %>
  </div>
</div>
</turbo-frame>
